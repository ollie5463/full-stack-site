{
    "compilerOptions": {
        "module": "ES2015",
        "target": "es6",
        "pretty": true,
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "outDir": "./dist",
        "baseUrl": "./src",
        "moduleResolution": "node",
        "allowJs": true,
        "jsx": "preserve",
        "esModuleInterop": true,
        "resolveJsonModule": true
    },
    "include": ["src/**/*", "tests/**/*"]
}
